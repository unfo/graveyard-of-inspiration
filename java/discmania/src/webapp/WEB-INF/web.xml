<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<!--
    Discmania web-app config.
    $Id: web.xml,v 1.1 2002/12/04 13:06:31 foo Exp $
-->

<web-app>

    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>discmania.ui.InitServlet</servlet-class>
        <load-on-startup/>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>discmania.ui.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>discmania.ui.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>browse</servlet-name>
        <servlet-class>discmania.ui.BrowseDiscsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view</servlet-name>
        <servlet-class>discmania.ui.ViewDiscServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>discmania.ui.ShoppingCartServlet</servlet-class>
     </servlet>
    <servlet>
        <servlet-name>checkout</servlet-name>
        <servlet-class>discmania.ui.CheckoutServlet</servlet-class>
     </servlet>
    <servlet>
        <servlet-name>orders</servlet-name>
        <servlet-class>discmania.ui.ViewOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>warehouse</servlet-name>
        <servlet-class>discmania.ui.WarehouseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>discmania.ui.UserManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>marketing</servlet-name>
        <servlet-class>discmania.ui.DiscManagementServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>browse</servlet-name>
        <url-pattern>/browse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>warehouse</servlet-name>
        <url-pattern>/warehouse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>marketing</servlet-name>
        <url-pattern>/marketing</url-pattern>
    </servlet-mapping>

</web-app>
